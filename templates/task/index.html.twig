{% extends 'base.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block body %}
<article>
    <header>
        <h1>Liste des tâches</h1>
        <p>Gestion simple des tâches (évaluation Symfony)</p>

        <a href="{{ path('task_new') }}" role="button">
            Ajouter une tâche
        </a>
    </header>

    {% for message in app.flashes('success') %}
        <mark>{{ message }}</mark>
    {% endfor %}

    {% if tasks is empty %}
        <p>Aucune tâche enregistrée.</p>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Contenu</th>
                    <th>Créée le</th>
                    <th>Expire le</th>
                    <th>Terminée</th>
                </tr>
            </thead>
            <tbody>
                {% for task in tasks %}
                    <tr>
                        <td><strong>{{ task.title }}</strong></td>
                        <td>{{ task.content }}</td>
                        <td>{{ task.createdAt|date("d/m/Y H:i") }}</td>
                        <td>
                            {{ task.expiredAt ? task.expiredAt|date("d/m/Y H:i") : "—" }}
                        </td>
                        <td>
                            {% if task.status %}
                                Oui
                            {% else %}
                                Non
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</article>
{% endblock %}
